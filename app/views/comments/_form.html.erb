<%= simple_form_for([@gossip, @gossip.comments.build], remote: true) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :message,
                  input_html: { class: "textarea" },
                  wrapper: false,
                  label_html: { class: "label" }
      %>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.button :submit, "Leave a comment", class: "button is-info" %>
    </div>
  </div>
<% end %>