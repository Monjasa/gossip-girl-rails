<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-half">
        <h1 class="title"><%= t '.title' %></h1>
        <%= simple_form_for([@gossip, @comment]) do |f| %>
          <%= f.error_notification %>
          <div class="field">
            <div class="control">
              <%= f.input :message,
                          input_html: { class: "textarea" },
                          wrapper: false,
                          label_html: { class: "label" }
              %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, t('comments.form.submit'), class: "button is-info is-fullwidth" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>