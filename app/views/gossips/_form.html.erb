<%= simple_form_for(@gossip) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :message,
                  required: true,
                  input_html: { class: "textarea" },
                  wrapper: false,
                  label_html: { class: "label" }
      %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= t '.tag_prompt' %></label>
    <div class="control has-icons-left">
      <div class="select is-info">
        <%= f.input_field :tag_id,
                          collection: @tags.map { |tag| [tag.name, tag.id] },
                          include_blank: false,
                          include_hidden: false
        %>
      </div>
      <span class="icon is-small is-left">
        <i class="fa fa-tag"></i>
      </span>
    </div>
  </div>

  <div class="field">
    <div class="control">
      <%= f.button :submit, t('.submit'), class: "button is-info is-fullwidth mt40" %>
    </div>
  </div>
<% end %>