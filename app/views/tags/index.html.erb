<div class="section">
  <div class="container">
      <div class="columns is-centered">
        <div class="column is-6">
          <h1 class="title is-2"><%= t '.title' %></h1>

          <% @tags.each do |tag| %>
            <div class="level is-mobile">
              <div class="level-left">
                <h5 class="subtitle is-5"><%= link_to tag.name, tag %></h5>
              </div>
              <div class="level-right">
                <div class="container buttons is-right">
                  <%= link_to t('.show'), tag, class: "button is-info" %>
                  <% if has_role?(:admin) %>
                    <%= link_to t('.edit'), edit_tag_path(tag), class:'button' %>
                    <%= link_to t('.delete'), tag, class:'button is-danger', method: :delete, data: { confirm: t('.delete_confirm') } %>
                <% end %>
                </div>
              </div>
            </div>
          <% end %>

          <% if has_role?(:admin) %>
            <%= link_to t('.new'), new_tag_path, class: "button is-medium is-info is-fullwidth" %>
          <% end %>
        </div>
      </div>
  </div>
</div>

