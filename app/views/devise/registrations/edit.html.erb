<div class="section">
  <div class="container">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
      <div class="columns is-centered">
        <div class="column is-6">
          <h2 class="title is-2"><%= t '.title' %></h2>

          <div class="columns is-centered">
            <div class="column is-one-third has-text-centered">

              <div class="is-hidden">
                <%= f.input :avatar,
                            input_html: {hidden: true},
                            wrapper: false %>
              </div>

              <div id="avatar-upload-btn" class="container has-text-centered">
                <figure class="image is-128x128 is-inline-block">
                  <%= user_avatar_tag(current_user, 128) %>
                </figure>

                <p>
                  <i class="fa fa-camera" aria-hidden="true"></i>
                  <strong><%= t '.update_avatar' %></strong>
                </p>

              </div>
            </div>

            <div class="column is-two-thirds">

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <%= resource.unconfirmed_email %>
              <% end %>

              <div class="field">
                <div class="control">
                  <%= f.input :name,
                              required: true,
                              input_html: {class: "input", autocomplete: "name"},
                              wrapper: false,
                              label_html: {class: "label"} %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :email,
                              required: false,
                              input_html: {class: "input", autocomplete: "name"},
                              wrapper: false,
                              label_html: {class: "label"} %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :password,
                              required: false,
                              hint: t('simple_form.hints.user.password_not_required'),
                              input_html: {class: "input", autocomplete: "new-password"},
                              wrapper: false,
                              label_html: {class: "label"} %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :password_confirmation,
                              required: false,
                              input_html: {class: "input", autocomplete: "new-password"},
                              wrapper: false,
                              label_html: {class: "label"} %>
                </div>
              </div>

              <div class="field">
                <div class="control">
                  <%= f.input :current_password,
                              required: true,
                              input_html: {class: "input", autocomplete: "password"},
                              wrapper: false,
                              label_html: {class: "label"} %>
                </div>
              </div>

              <div class="buttons-level field">
                <div class="control">
                  <%= f.button :submit, t('.submit'), class: "button is-info is-medium", id: :edit_account %>
                </div>
                <div class="control">
                  <%= link_to t('.back'), tweets_path, class: "button is-dark is-medium" %>
                </div>
              </div>

              <div class="field is-grouped">

              </div>

            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>