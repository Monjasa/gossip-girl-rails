<div class="section">
  <div class="container">
    <div class="columns is-centered">
      <div class="column is-4">
        <h2 class="title is-2"><%= t '.title' %></h2>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

          <div class="field">
            <div class="control">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          wrapper: false,
                          input_html: { class: "input", autocomplete: "email" },
                          label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :password,
                          required: false,
                          wrapper: false,
                          input_html: { class: "input", autocomplete: "current-password" },
                          label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :remember_me,
                          wrapper: false,
                          input_html: { class: "is-checkradio is-info" },
                          as: :boolean, boolean_style: :inline if devise_mapping.rememberable? %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.button :submit, t('.submit'), class: "button is-info is-medium is-fullwidth mt50" %>
            </div>
          </div>
        <% end %>

        <br/>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>